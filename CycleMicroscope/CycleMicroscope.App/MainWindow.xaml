<Window x:Class="CycleMicroscope.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CycleMicroscope.App.ViewModels"
        xmlns:local="clr-namespace:CycleMicroscope.App"
        mc:Ignorable="d"
        Title="Cycle Microscope" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
        <local:ArrayToStringConverter x:Key="ArrayToStringConverter"/>
        <Style x:Key="CompactStackPanel" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        <Style x:Key="CompactGroupBox" TargetType="GroupBox">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Компактная панель управления -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <TextBlock Text="Алгоритм:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox SelectedItem="{Binding SelectedMode}" MinWidth="120" Height="25">
                <ComboBoxItem Content="PrefixSum"/>
                <ComboBoxItem Content="CountGreaterThanT"/>
                <ComboBoxItem Content="PrefixMax"/>
            </ComboBox>

            <Button Content="Сгенерировать" Command="{Binding GenerateArrayCommand}" 
                    Margin="8,0" Padding="6,2" Height="25" ToolTip="Создать новый массив"/>
            <Button Content="Инициализировать" Command="{Binding InitializeCommand}" 
                    Margin="5,0" Padding="6,2" Height="25" ToolTip="Подготовить алгоритм"/>
            <Button Content="Шаг" Command="{Binding StepCommand}" 
                    Margin="5,0" Padding="6,2" Height="25" ToolTip="Выполнить один шаг"/>
            <Button Content="Всё" Command="{Binding RunAllCommand}" 
                    Margin="5,0" Padding="6,2" Height="25" ToolTip="Выполнить все шаги"/>
            <Button Content="Справка" Click="HelpButton_Click" 
                    Margin="5,0" Padding="6,2" Height="25" ToolTip="Открыть справку"/>
        </StackPanel>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - Параметры -->
            <GroupBox Header="Параметры" Grid.Column="0" Style="{StaticResource CompactGroupBox}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Style="{StaticResource CompactStackPanel}">
                        <TextBlock Text="Размер:" Width="50" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding ArrayModel.Size, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="40" Height="20"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Style="{StaticResource CompactStackPanel}">
                        <TextBlock Text="Min:" Width="50" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding ArrayModel.MinValue, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="40" Height="20"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Style="{StaticResource CompactStackPanel}">
                        <TextBlock Text="Max:" Width="50" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding ArrayModel.MaxValue, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="40" Height="20"/>
                    </StackPanel>

                    <!-- Порог T (только для CountGreaterThanT) -->
                    <StackPanel Orientation="Horizontal" Style="{StaticResource CompactStackPanel}"
                                Visibility="{Binding SelectedMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=CountGreaterThanT}">
                        <TextBlock Text="Порог T:" Width="50" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding ArrayModel.Threshold, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="40" Height="20"/>
                    </StackPanel>

                    <Separator Margin="0,8"/>

                    <!-- Информация об алгоритме -->
                    <TextBlock Text="{Binding AlgorithmName}" FontWeight="Bold" Margin="0,2"/>
                    <TextBlock Text="{Binding AlgorithmDescription}" TextWrapping="Wrap" FontSize="11" Margin="0,2"/>

                    <TextBlock Text="Инвариант:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                    <TextBlock Text="{Binding AlgorithmInvariantWords}" TextWrapping="Wrap" 
                               FontStyle="Italic" FontSize="10" Margin="0,1"/>
                    <TextBlock Text="{Binding AlgorithmInvariantFormula}" TextWrapping="Wrap" 
                               FontFamily="Consolas" FontSize="10" Margin="0,1"/>

                    <Separator Margin="0,8"/>

                    <!-- Массив -->
                    <TextBlock Text="Массив:" FontWeight="SemiBold" Margin="0,2"/>
                    <Border Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="1" Padding="3" Margin="0,2">
                        <TextBlock Text="{Binding ArrayModel.Array, Converter={StaticResource ArrayToStringConverter}}" 
                                   TextWrapping="Wrap" FontFamily="Consolas" FontSize="10"/>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- Правая панель - Состояние -->
            <GroupBox Header="Состояние выполнения" Grid.Column="1" Style="{StaticResource CompactGroupBox}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Style="{StaticResource CompactStackPanel}">
                        <TextBlock Text="j =" Width="30" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CycleState.J}" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Style="{StaticResource CompactStackPanel}">
                        <TextBlock Text="res =" Width="30" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CycleState.Res, Converter={StaticResource ArrayToStringConverter}}" 
                                   FontWeight="Bold" TextWrapping="Wrap" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Style="{StaticResource CompactStackPanel}">
                        <TextBlock Text="Variant =" Width="50" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CycleState.VariantFunction}" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Separator Margin="0,8"/>

                    <!-- Статусы верификации -->
                    <StackPanel Orientation="Horizontal" Style="{StaticResource CompactStackPanel}">
                        <TextBlock Text="Инвариант до:" Width="80" VerticalAlignment="Center"/>
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="✓ ВЫПОЛНЕН"/>
                                    <Setter Property="Foreground" Value="Green"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CycleState.IsInvariantHeldBefore}" Value="False">
                                            <Setter Property="Text" Value="✗ НАРУШЕН"/>
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Style="{StaticResource CompactStackPanel}">
                        <TextBlock Text="Инвариант после:" Width="80" VerticalAlignment="Center"/>
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="✓ ВЫПОЛНЕН"/>
                                    <Setter Property="Foreground" Value="Green"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CycleState.IsInvariantHeldAfter}" Value="False">
                                            <Setter Property="Text" Value="✗ НАРУШЕН"/>
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Style="{StaticResource CompactStackPanel}">
                        <TextBlock Text="Завершён:" Width="80" VerticalAlignment="Center"/>
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="✓ ДА"/>
                                    <Setter Property="Foreground" Value="Green"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CycleState.IsCompleted}" Value="False">
                                            <Setter Property="Text" Value="✗ НЕТ"/>
                                            <Setter Property="Foreground" Value="Gray"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Результат -->
        <GroupBox Header="Результат выполнения" Grid.Row="2" Style="{StaticResource CompactGroupBox}">
            <TextBlock Text="{Binding WPResult}" TextWrapping="Wrap" FontWeight="SemiBold" Margin="2"/>
        </GroupBox>
    </Grid>
</Window>