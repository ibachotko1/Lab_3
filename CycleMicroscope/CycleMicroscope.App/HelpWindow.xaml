<Window x:Class="CycleMicroscope.App.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Справка - Cycle Microscope" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Справка по Cycle Microscope" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- Содержимое справки -->
        <TabControl Grid.Row="1">
            <TabItem Header="Общее">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <TextBlock Text="Cycle Microscope - инструмент для визуализации и верификации циклических алгоритмов" 
                                   FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBlock Text="Основные функции:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="• Генерация массивов случайных чисел" Margin="10,0,0,2"/>
                        <TextBlock Text="• Визуализация пошагового выполнения алгоритмов" Margin="10,0,0,2"/>
                        <TextBlock Text="• Проверка инвариантов цикла" Margin="10,0,0,2"/>
                        <TextBlock Text="• Верификация условий Hoare" Margin="10,0,0,10"/>

                        <TextBlock Text="Доступные алгоритмы:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="• PrefixSum - вычисление префиксных сумм" Margin="10,0,0,2"/>
                        <TextBlock Text="• CountGreaterThanT - подсчет элементов > T" Margin="10,0,0,2"/>
                        <TextBlock Text="• PrefixMax - поиск максимума на префиксах" Margin="10,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Алгоритмы">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <TextBlock Text="Prefix Sum" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="Вычисляет сумму элементов на каждом префиксе массива" Margin="0,0,0,10"/>
                        <TextBlock Text="Инвариант: res[i] = sum(arr[0..i])" FontStyle="Italic" Margin="0,0,0,15"/>

                        <TextBlock Text="Count Greater Than T" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="Подсчитывает количество элементов, больших порога T" Margin="0,0,0,10"/>
                        <TextBlock Text="Инвариант: count = Σ [arr[j] > T] для j=0..i" FontStyle="Italic" Margin="0,0,0,15"/>

                        <TextBlock Text="Prefix Maximum" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="Находит максимальный элемент на каждом префиксе" Margin="0,0,0,10"/>
                        <TextBlock Text="Инвариант: res[i] = max(arr[0..i])" FontStyle="Italic" Margin="0,0,0,15"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            
            <TabItem Header="Верификация">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <TextBlock Text="Проверка инвариантов:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="• Инвариант ДО - проверяется перед выполнением шага" Margin="10,0,0,2"/>
                        <TextBlock Text="• Инвариант ПОСЛЕ - проверяется после выполнения шага" Margin="10,0,0,2"/>
                        <TextBlock Text="• Вариант - гарантирует завершение цикла" Margin="10,0,0,10"/>

                        <TextBlock Text="Условия Hoare:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Margin="10,0,0,2">
                <Run Text="{}{Pre} → [Init] Inv"/>
                        </TextBlock>
                        <TextBlock Margin="10,0,0,2">
                <Run Text="{}{Inv ∧ Condition} → [Body] Inv"/>
                        </TextBlock>
                        <TextBlock Margin="10,0,0,10">
                <Run Text="{}{Inv ∧ ¬Condition} → {Post}"/>
                        </TextBlock>

                        <TextBlock Text="Статусы выполнения:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="✓ - условие выполняется" Foreground="Green" Margin="10,0,0,2"/>
                        <TextBlock Text="✗ - условие нарушено" Foreground="Red" Margin="10,0,0,2"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
        </TabControl>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="2" Content="Закрыть" Width="80" 
                HorizontalAlignment="Right" Margin="0,10,0,0"
                Click="CloseButton_Click"/>
    </Grid>
</Window>